<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Bootstrap MultiSelect Examples</title>
    <script type="importmap"></script>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!-- Bootstrap Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/jquery-bootstrap-multiselect.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BootstrapMultiSelectExamples.styles.css" asp-append-version="true" />
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-check2-square text-primary"></i>
                    Bootstrap MultiSelect
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Examples" asp-action="Plugin">
                                <i class="bi bi-code-square"></i> Plugin Examples
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Examples" asp-action="MVC">
                                <i class="bi bi-ui-checks-grid"></i> MVC Examples
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock"></i> Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - Bootstrap MultiSelect Examples - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <!-- jQuery Bootstrap MultiSelect Plugin -->
    <script src="~/js/jquery-bootstrap-multiselect.js" asp-append-version="true"></script>

    @* 
        LOCALIZATION: Uncomment one of the following lines to enable automatic localization.
        The language is automatically set when you load the file - no additional code needed!
        
        Available languages:
        - Italian (it):     jquery-bootstrap-multiselect.it.js
        - Spanish (es):     jquery-bootstrap-multiselect.es.js
        - French (fr):      jquery-bootstrap-multiselect.fr.js
        - German (de):      jquery-bootstrap-multiselect.de.js
        - Portuguese (pt):  jquery-bootstrap-multiselect.pt.js
        
        Example: Uncomment the line below to use Italian globally
    *@
    <script src="~/js/langs/jquery-bootstrap-multiselect.it.js" asp-append-version="true"></script>
    <script src="~/js/langs/jquery-bootstrap-multiselect.es.js" asp-append-version="true"></script>
    <script>
        // Set Italian as the global default language
        //$.fn.bootstrapMultiSelect.lang = 'it';
    </script>

    @* 
        OR use culture-based automatic localization:
    *@
    @* 
    @using System.Globalization
    @{
        var culture = CultureInfo.CurrentCulture.TwoLetterISOLanguageName;
    }
    @if (culture != "en")
    {
        <script src="~/js/langs/jquery-bootstrap-multiselect.@(culture).js" asp-append-version="true"></script>
    }
    *@

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>